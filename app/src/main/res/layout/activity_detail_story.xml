<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.story.detail.DetailStoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_iv_banner"
            android:layout_width="409dp"
            android:layout_height="267dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/image_of_user_story"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_images_re_0kll" />

        <TextView
            android:id="@+id/detail_tv_detailStory"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_tv_user"
            tools:text="@string/lorem_ipsum" />

        <TextView
            android:id="@+id/detail_tv_user"
            style="@style/text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_iv_banner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>