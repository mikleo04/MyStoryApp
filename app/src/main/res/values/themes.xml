<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Transition -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <!-- End of transition -->

    </style>

    <style name="Theme.MyStoryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.StoryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.StoryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">#f00</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_input_layout.password">
        <item name="android:hint">@string/password</item>
        <item name="startIconDrawable">@drawable/ic_lock</item>
        <item name="passwordToggleEnabled">true</item>

    </style>

    <style name="text_input_layout.email">
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="android:hint">@string/email</item>
    </style>

    <!--  INPUT STYLE  -->
    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="input.password">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="input.email">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">#0f0</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text.error_message">
        <item name="android:textColor">#f00</item>
    </style>
    <style name="text.text6">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="heading.heading6">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="progress_bar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:visibility">gone</item>
    </style>
    <style name="progress_bar.inline">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="srcCompat">@drawable/arrow_back</item>
        <item name="contentDescription">@string/back_to_previous_page</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintHorizontal_bias">0.07</item>


    </style>

</resources>